apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: <%= service_slug %>
  namespace: <%= namespace %>
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: <%= service_slug %>
  minReplicas: <%= replicas %>
  maxReplicas: <%= max_replicas %>
  targetCPUUtilizationPercentage: <%= target_cpu_utilisation %>
