<% if warning.messages.any?  %>
  <%= govuk_warning_text(
    text: warning.heading,
    icon_fallback_text: warning.icon_fallback,
    classes: environment == 'production' ? 'govuk-warning-text--error icon-hexagon' : ''
  ) %>

  <ul class="publish-environment__issues-list">
    <% warning.messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
