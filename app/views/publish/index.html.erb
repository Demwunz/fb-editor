<h1><%= t('publish.name') %><h1>

<h2><%= t('publish.heading') %></h2>

<p><%= t('publish.sub_heading') %></p>

<p><%= t('publish.version', time: l(service.created_at.to_time, format: :simple)) %></p>

<h2><%= t('publish.test') %></h2>

<span>
  <%= PublishServicePresenter.hostname_for(deployment_environment: 'dev', view: self) %>
</span>

<p><%= t('publish.test_sub_heading') %></p>

<%= form_for(@publish_service_creation, url: publish_index_path(service.service_id)) do |f| %>
  <%= f.hidden_field :deployment_environment, value: 'dev' %>

  <div class="govuk-form-group">
    <%= f.check_box :require_authentication %>
    <%= f.label :require_authentication %>
  </div>

  <div class="govuk-form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="govuk-form-group">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <%= f.submit t('actions.publish_to_test'), class: 'govuk-button editor-button' %>
<% end %>

<h2><%= t('publish.live') %></h2>

<span>
  <%= PublishServicePresenter.hostname_for(deployment_environment: 'production', view: self) %>
</span>

<p><%= t('publish.live_sub_heading') %></p>

<%= form_for(@publish_service_creation, url: publish_index_path(service.service_id)) do |f| %>
  <%= f.hidden_field :deployment_environment, value: 'production' %>

  <%= f.submit t('actions.publish_to_live'), class: 'govuk-button editor-button' %>
<% end %>
