<%#
# Edit

This view is the template for the edit page.

It displays a header, and renders the `_form` partial to do the heavy lifting.

## Local variables:

- `page`:
  An instance of [Administrate::Page::Form][1].
  Contains helper methods to help display a form,
  and knows which attributes should be displayed in the resource's form.

[1]: http://www.rubydoc.info/gems/administrate/Administrate/Page/Form
%>

<% content_for(:title) do %>
  <%= display_resource_name('Service') %>
<% end %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title" id="page-title">
    <%= @service.service_name %>
  </h1>
  <h2>Service ID: <%= @service.service_id %></h2>
</header>

<section class="main-content__body">
  <div class="">
    <a href="<%= admin_services_path %>" class="govuk-back-link">
      Back to services
    </a>
  </div>
     <%= form_with(
        url: admin_service_path(@service.service_id),
        method: :put,
        local: true) do |f| %>
        <%= f.submit 'Save', class: 'govuk-button fb-govuk-button', id: 'version-save' %>
<div class="govuk-form-group">
  <fieldset class="govuk-fieldset" aria-describedby="maintenance-mode-hint">
    <legend class="govuk-fieldset__legend">
      Maintenance Mode
    </legend>
    <div id="maintenance mode-hint" class="govuk-hint">
      Prevent public access to this form during a period of maintenance
    </div>
    <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
      <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="maintenance_mode" name="maintenance_mode" type="radio" value="0" <%= @maintenance_mode_configuration['maintenance_mode'] != '1' ? 'checked="checked"' : '' %> >
        <label class="govuk-label govuk-radios__label" for="maintenance_mode">
          Disabled
        </label>
      </div>
      <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="maintenance_mode_2" name="maintenance_mode" type="radio" value="1" <%= @maintenance_mode_configuration['maintenance_mode'] == '1' ? 'checked="checked"' : '' %> >
        <label class="govuk-label govuk-radios__label" for="maintenance_mode_2">
          Enabled
        </label>
      </div>
    </div>
  </fieldset>
</div>
<div class="govuk-form-group">
  <label class="govuk-label" for="maintenance_mode_heading">Maintenance Page Heading</label>
  <input type="text" id="maintenance_mode_heading" name="maintenance_page_heading" class="govuk-input" value="<%= @maintenance_mode_configuration['maintenance_page_heading'] || t('presenter.maintenance.heading') %> " />
</div>
<div class="govuk-form-group">
    <label class="govuk-label" for="maintenance_page_content">Maintenance Page content</label>
    <p class="govuk-hint" id="content-hint">Should be formatted as markdown</p>
    <textarea class="govuk-textarea" id="version" name="maintenance_page_content" rows="20" style="max-width:100%" aria-describedby="content-hint"><%= @maintenance_mode_configuration['maintenance_page_content'] || t('presenter.maintenance.content') %></textarea>
  </div>
<% end %>

</section>
