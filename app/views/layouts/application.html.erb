<!DOCTYPE html>
<html>
  <head>
    <title>FbEditor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to t('.sign_out'), user_session_path, method: :delete %>
    <% end %>

    <%= yield %>
  </body>
</html>
