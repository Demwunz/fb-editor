<!DOCTYPE html>
<html>
  <head>
    <title>MoJ Forms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render partial: 'partials/head_tags' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="govuk-template__body govuk-body">
    <%= render partial: 'partials/header' %>
    <%= render partial: 'partials/form-navigation', locals: { current: 'settings' } %>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-width-container govuk-body-m" id="main-content" role="main">
      <% if user_signed_in? %>
        <%= link_to t('.sign_out'), user_session_path, method: :delete %>
      <% end %>

      <%= yield %>
    </main>

  </body>
</html>
